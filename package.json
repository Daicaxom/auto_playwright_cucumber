{
  "name": "playwright-cucumber-enterprise",
  "version": "1.0.0",
  "description": "Enterprise-grade Playwright + Cucumber BDD testing framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'tests/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "cucumber": "cucumber-js",
    "cucumber:smoke": "cucumber-js --profile smoke",
    "cucumber:regression": "cucumber-js --profile regression",
    "cucumber:negative": "cucumber-js --profile negative",
    "cucumber:report": "npm run cucumber; npm run report:generate",
    "playwright:test": "playwright test",
    "playwright:report": "playwright show-report playwright-report",
    "report:generate": "node scripts/generate-report.js",
    "report:allure": "allure generate allure-results --clean -o allure-report",
    "report:allure:open": "allure open allure-report",
    "report:allure:serve": "allure serve allure-results",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "bdd",
    "testing",
    "automation",
    "enterprise"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "allure-commandline": "^2.36.0",
    "allure-cucumberjs": "^2.13.0",
    "allure-js-commons": "^3.4.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "multiple-cucumber-html-reporter": "^3.9.3",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@cucumber/cucumber": "^10.2.1",
    "@faker-js/faker": "^8.3.1",
    "@playwright/test": "^1.40.1",
    "winston": "^3.11.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
